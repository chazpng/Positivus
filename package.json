{
  "name": "underscores",
  "version": "1.0.0",
  "description": "Hi. I'm a starter theme called _s, or underscores, if you like. I'm a theme meant for hacking so don't use me as a Parent Theme. Instead try turning me into the next, most awesome, WordPress theme out there. That's what I'm here for.",
  "author": "Automattic Theme Team",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme"
  ],
  "homepage": "https://github.com/Automattic/_s#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Automattic/_s.git"
  },
  "bugs": {
    "url": "https://github.com/Automattic/_s/issues"
  },
  "devDependencies": {
    "@wordpress/scripts": "^19.2.2",
    "dir-archiver": "^1.1.1",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-minify": "^3.1.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-uglify": "^3.0.2",
    "husky": "^9.0.10",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^16.0.0",
    "rtlcss": "^3.5.0",
    "tailwindcss": "^3.2.7"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "gulp": "gulp",
    "gulp-build": "gulp build",
    "build": "npm-run-all --parallel gulp-build tailwind-build",
    "tailwind-build": "npx tailwindcss -i ./tailwind/src/input.scss -o ./tailwind/dist/output.min.css --minify",
    "tailwind": "npx tailwindcss -i ./tailwind/src/input.scss -o ./tailwind/dist/output.min.css --minify --watch",
    "watch": "npm-run-all --parallel tailwind gulp",
    "compile:css": "node-sass sass/ -o ./ && stylelint '*.css' --fix || true && stylelint '*.css' --fix",
    "compile:rtl": "rtlcss style.css style-rtl.css",
    "lint:scss": "wp-scripts lint-style frontend/resources/sass/**/*.scss",
    "lint:tailwind": "wp-scripts lint-style 'tailwind/src/**/*.scss' 'tailwind/src/*.scss' || wp-scripts lint-style \"tailwind/src/**/*.scss\" \"tailwind/src/*.scss\"",
    "lint:blockscss": "wp-scripts lint-style acf/blocks/**/**/*.scss",
    "lint:componentscss": "wp-scripts lint-style frontend/components/**/**/*.scss",
    "lint:js": "wp-scripts lint-js frontend/resources/js/*.js",
    "lint:blockjs": "wp-scripts lint-js acf/blocks/**/**/*.js --quiet",
    "lint:componentjs": "wp-scripts lint-js frontend/components/**/**/*.js --quiet",
    "lint:php": "php vendor/bin/phpcs -d error_reporting=24575",
    "lint": "npm-run-all lint:*",
    "bundle": "dir-archiver --src . --dest ../_s.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map yarn.lock",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/container-queries": "^0.1.1"
  }
}
