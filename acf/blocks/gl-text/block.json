{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "gl/text",
	"title": "GL Text",
	"description": "GL Text Block.",
	"style": [ "file:./css/style.min.css" ],
	"script": "",
	"category": "gl-blocks",
	"icon": "block-default",
	"keywords": ["gl", "text"],
	"apiVersion": 2,
	"acf": {
		"mode": "preview",
		"renderTemplate": "gl-text.php"
	},
	"supports": {
		"align": false,
		"anchor": false,
		"alignContent": false,
		"dimensions": {
			"minHeight": true
		},
		"color": {
			"text": true,
			"background": true,
			"link": true
		},
		"typography": {
			"lineHeight": true,
			"fontSize": true,
			"fontWeight": true,
			"fontStyle": true,
			"fontFamilies": [
        {
          "fontFamily": "Dancing Script",
          "name": "Dancing Script",
          "slug": "dancing-script"
        }
      ],
			"textTransform": true
		},
		"fullHeight": true
	},
	"attributes": {
    "fontFamily": {
      "type": "string",
      "default": "Arial, sans-serif"
    }
  }
}
