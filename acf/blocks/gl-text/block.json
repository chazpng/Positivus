{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "gl/text",
	"title": "GL Text",
	"description": "GL Text Block.",
	"style": [ "file:./css/style.min.css" ],
	"script": "",
	"category": "gl-blocks",
	"icon": "block-default",
	"keywords": ["gl", "text"],
	"apiVersion": 2,
	"acf": {
		"mode": "preview",
		"renderTemplate": "gl-text.php"
	},
	"supports": {
		"align": true,
		"anchor": false,
		"alignContent": false,
		"color": {
		"text": true,
		"background": false,
		"link": false
		},
		"alignText": true,
		"spacing": {
			"margin": [
				"top",
				"bottom"
			],
			"padding": true
		},
		"typography": {
			"lineHeight": true,
			"fontSize": true
		},
		"fullHeight": true
	},
	"attributes": {
    "fontFamily": {
      "type": "string",
      "default": "Arial, sans-serif"
    }
  }
}
